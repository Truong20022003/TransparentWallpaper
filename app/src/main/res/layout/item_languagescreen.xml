<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_item_frag_unselected"
    android:layout_marginHorizontal="16sp"
    android:layout_marginTop="10sp">
<ImageView
    android:id="@+id/imgFrag"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:src="@drawable/img_frag_eng"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="15sp"
    app:layout_constraintRight_toRightOf="@+id/txtCountry"

    />
    <TextView
        android:id="@+id/txtCountry"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="English"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgFrag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imgFrag"
        android:fontFamily="@font/plusjakartasans_bold"
        android:paddingLeft="20sp"
        android:textSize="18sp"
        android:textColor="#ffffff"
        />
    <RadioButton
        android:id="@+id/rdoButtton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="15sp"
        android:button="@drawable/custom_radio_selector"/>
</androidx.constraintlayout.widget.ConstraintLayout>